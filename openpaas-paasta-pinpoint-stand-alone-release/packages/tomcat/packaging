# abort script on any command that exits with a non zero value
set -e

archive="tomcat/apache-tomcat-8.0.32.tar.gz"

if [[ -f $archive ]] ; then
  echo "Archive found"
  echo "Extracting archive..."
  tar xzf $archive
else
  echo "Archive not found"
  exit 1
fi

if [[ -d apache-tomcat-8.0.32/bin ]]; then
  echo "Starting Install TOMCAT ..."
  cp -a apache-tomcat-8.0.32/* ${BOSH_INSTALL_TARGET}
  echo "SUCCESS :: Starting Install TOMCAT ..."
else
  echo "TOMCAT is not properly packaged"
  exit 1
fi
