#!/bin/bash -e

set -e

JOB_DIR=/var/vcap/jobs/op-glusterfs-java-broker
PACKAGE_DIR=/var/vcap/packages/op-gluster-java-broker
RUN_DIR=/var/vcap/sys/run/op-glusterfs-java-broker
LOG_DIR=/var/vcap/sys/log/<%= p('log_dir')%>
JAVA_DIR=/var/vcap/packages/openjdk
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    $JAVA_DIR/bin/java -jar $PACKAGE_DIR/openpaas-service-java-broker-glusterfs.jar --logging.level.root=<%= p('log_level')%> --spring.config.location=$JOB_DIR/config/datasource.properties --logging.config=file:$JOB_DIR/config/logback.xml

    ;;
  stop)
    kill -9 `cat $PIDFILE`

    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: op-glusterfs-java-broker_ctl {start|stop}"
    ;;

esac
